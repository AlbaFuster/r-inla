CC = gcc
CFLAGS = -O3 -march=native -DWITH_MKL -DSHOW_TEST_OUTPUT
MKLROOT = /opt/intel/lib

test : test.o dot-product.o
	$(CC) -o $@ $^ -lblas -lgomp \
         -L${MKLROOT} \
        -Wl,--start-group \
                ${MKLROOT}/libmkl_intel_lp64.a \
                ${MKLROOT}/libmkl_sequential.a \
                ${MKLROOT}/libmkl_core.a \
        -Wl,--end-group \
	-lgsl -lgslcblas -lm
